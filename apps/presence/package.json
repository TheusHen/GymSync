{
  "name": "gymsync-presence",
  "description": "Show your gym workouts on Discord with Rich Presence.",
  "author": "TheusHen",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "build": "electron-builder"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.6.0",
    "discord-rich-presence": "^0.0.8",
    "discord-rpc": "^4.0.1",
    "dotenv": "^17.1.0",
    "electron-prompt": "^1.7.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0"
  },
  "build": {
    "appId": "com.gymsync.presence",
    "productName": "GymSync Presence",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    }
  }
}
