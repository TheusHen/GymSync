{
  "name": "gymsync-presence",
  "description": "Show your gym workouts on Discord with Rich Presence.",
  "author": {
    "name": "TheusHen",
    "email": "dev@theushen.me"
  },
  "version": "1.0.0",
  "homepage": "https://github.com/TheusHen/GymSync",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "build": "electron-builder"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "auto-launch": "^5.0.6",
    "axios": "^1.6.0",
    "discord-rich-presence": "^0.0.8",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.3.1",
    "electron-prompt": "^1.7.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0"
  },
  "build": {
    "appId": "com.gymsync.presence",
    "productName": "GymSync Presence",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets/**/*",
      "build/icon.png",
      "main.js",
      "package.json"
    ],
    "nativeRebuilder": "legacy",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "maintainer": "TheusHen <dev@theushen.me>"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "dir",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.utilities"
    }
  }
}
